</head>

<script type="text/x-dot-template" id="data_temp">
<body {{? it.pt==1}}class="ms-padd"{{??}}class="ms-padd-seckill"{{?}}>
	<div class="content">
		<header class="shops-head">
			<a href="index.action" class="head-left"><i class="iconfont icon-xiangzuo1"></i></a>
			<div class="head-tit">				
				{{? it.pt==0}}秒杀专场{{?}}{{? it.pt==1}}限时购{{?}}
			</div>
			<!--<a href="#" class="head-right"><i class="iconfont icon-fenleisousuo"></i></a>-->
		</header>
		{{? it.pt==1}}
		<div class="fltabs">
			<a href="<#if pt==0>${base}/seckill!list.action?pt=0&&state=0</#if><#if pt==1>${base}/seckill!list.action?pt=1&&state=0</#if>" class="tab-link {{? it.state==0}}active{{?}}">现场</a>
			<a href="<#if pt==0>${base}/seckill!list.action?pt=0&&state=1</#if><#if pt==1>${base}/seckill!list.action?pt=1&&state=1</#if>" class="tab-link {{? it.state==1}}active{{?}}">预告</a>
		</div>
		{{?}}

		<dl class="msbox">
		</dl>
	</div>
</body>
</script>
	<script type="text/javascript" src="../script/doT.js" charset="utf-8"></script>
	<script type='text/javascript' src='../script/base.js' charset='utf-8'></script>
	<script type='text/javascript' src='../script/api.js' charset='utf-8'></script>	
	<script type="text/javascript" src='../script/jquery.countdown.js'></script>
	<script type="text/javascript" src='../script/list.js'></script>
	
	<script type="text/javascript">
		var pn = 1;
		apiready = function(){
			var pt = api.pageParam.pt;
			var state = api.pageParam.state;
			var ret = {};
			ret.pt = pt;
			ret.state = state;
			var template = $('#data_temp').html();
 			$('body').prop('outerHTML',doT.template(template)(ret));


			page();
			$(window).scroll(function(){
				if(uiIsPageBottom()) {
					page();
				}	
			});

			function page(){

				api.ajax({
		 			url : BASE_JSON_URL + "json/seckill!list.action",
	    			method: 'post',
		            cache:true,
		            timeout: 30,
		            dataType: 'text',
		            returnAll:false,
		            data:{
		                values:{
		                	pn:pn,state:state,pt:pt
		                }
		            }

		 		},function(html,err){
		 			if(pn == 1){
						$(".msbox").html(html);
					}else{
						$(".msbox").append(html);
					}
					pn++;	
					$('.countdown').countdown();
		 		});

				// $.ajax({
				// 	url:"json/seckill!list.action",
				// 	type:'post',
				// 	data:{pn:pn,state:state,pt:pt},
				// 	success:function(html){
				// 		if(pn == 1){
				// 			$(".msbox").html(html);
				// 		}else{
				// 			$(".msbox").append(html);
				// 		}
				// 		pn++;	
				// 		$('.countdown').countdown();
				// 	}
				
				// });
			}

		}



	</script>
</html>