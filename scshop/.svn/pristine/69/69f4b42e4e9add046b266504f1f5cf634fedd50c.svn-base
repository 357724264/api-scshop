					if(ret.success){
							
						//$api.setStorage('token', ret.token);
						var redirecturl = api.pageParam.pId;
						
						if(redirecturl&&redirecturl!="") {
							openWin(redirecturl,"");
						}else {
							openWin("index","");
						}
						
					}else{
						$.alert("账号或者密码错误");
					}
					api.hideProgress();

				});
			}

		});

